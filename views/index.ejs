            "> shikhar --contact\n  Available for new opportunities\n\n",
            "> shikhar --hire\n  Ready to build something amazing?"
        ];
        
        let textIndex = 0;
        let charIndex = 0;
        let isDeleting = false;
        let isWaiting = false;
        
        function type() {
            const currentText = texts[textIndex];
            
            if (isDeleting) {
                typingText.textContent = currentText.substring(0, charIndex - 1);
                charIndex--;
                
                if (charIndex === 0) {
                    isDeleting = false;
                    textIndex++;
                    
                    if (textIndex === texts.length) {
                        textIndex = 0;
                    }
                    
                    setTimeout(type, 500);
                    return;
                }
            } else {
                typingText.textContent = currentText.substring(0, charIndex + 1);
                charIndex++;
                
                if (charIndex === currentText.length) {
                    isWaiting = true;
                    setTimeout(() => {
                        isWaiting = false;
                        isDeleting = true;
                        setTimeout(type, 100);
                    }, 2000);
                    return;
                }
            }
            
            const typeSpeed = isDeleting ? 50 : 70;
            setTimeout(type, typeSpeed);
        }
        
        setTimeout(type, 1000);

