    <script>

        const typingText = document.getElementById('typingText');
        const texts = [
            "> shikhar --role\n  Backend Developer\n\n",
            "> shikhar --location\n  Kanpur, Uttar Pradesh, India\n\n",
            "> shikhar --skills\n  Node.js, Python, React, MongoDB\n\n",
